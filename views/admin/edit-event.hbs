
<div class="container-form">
  <div class="event-form">
    <h2>Editar Evento</h2>
    <p></p>
    
  </div>
  <form class="form-event" action="/{{oneEvent._id}}/edit" method="POST" enctype="multipart/form-data" autocomplete="off">
    <input class="campo" type="text" name="title" value="{{oneEvent.title}}" />
    <input class="campo" type="text" name="location" value="{{oneEvent.location}}" />
    <input class="campo" type="date" name="date" value="{{oneEvent.date}}" min="2022-01-01" max="2030-12-31">
    <input class="campo" min="06:00" max="00:00" type="time" name="time" value="{{oneEvent.time}}"/>
    <textarea class="campo"  cols="30" rows="10" type="text" name="description" value="{{oneEvent.description}}"></textarea>
    <input class="campo" type="text" name="redesEvent" placeholder="...link a tu red social" value="{{oneEvent.redesEvent}}"/>
    <input class="campo" type="file" name="img">
    <button class="btn-event" type="submit">Editar Evento</button>
  </form>
  {{#if errorMessage}}
<p style="color:red">{{errorMessage}}</p>
{{/if}}
</div>